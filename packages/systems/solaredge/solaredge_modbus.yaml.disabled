solaredge_modbus:
    name: 'SolarEdge Modbus'
    host: !secret solaredge_modbus_ip
    port: 1502
    scan_interval: 3 #Optional: time in seconds between readings. Recommended value is at fastest 2-3 sec, default 5
    read_meter1: true #Optional: set this to true if you have an external modbus meter connected with RS485 for reading self consumption
